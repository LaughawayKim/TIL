package lab.java.core;

public class MethodTest {
	
	int member = 0;
	
	public int method1() {
		int local = 1;
		return local;
	}
	
	public void method2(int member) {
		System.out.println(member);
		//클래스 내부에서 자신을 객체 생성하지 않고 this를 사용합니다.
		//this는 객체 생성될 때 자신을 참조하는 reference변수입니다.
		System.out.println(this.member);
		//메서드내에 선언된 loca변수는 메모리에 메서드가 호출될 때 생덩되고 ,
		//메서드 수행이 종료되면 GC되므로, local 변수는 메서드 외부에서 참조 불가합니다.
		System.out.println(this.method1());
		System.out.println(method1());
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}
