package com.DeLa.util;

public class Sort {

	public static boolean QuickSort(int[] array, int nLow, int nHigh)	{
		int lo = nLow;
		int hi = nHigh;
		int pivot = (lo + hi) / 2;
		int nItemLow, nItemHigh, nItemPivot;
//		TCHARin *pszLow, *pszHigh, *pszPivot;
	 
		while(TRUE){
			nItemPivot = array[pivot];
	 
			while( lo < pivot ) {
				nItemLow = array[lo];
				if( pivot < nItemLow )
					break;
				else
					lo++;
			}
	 
			while( hi > pivot ) {
				nItemHigh = array[hi];
				if( nItemHigh < pivot )
					break;
				else
					hi--;
			}
	 
			if( lo == pivot && hi == pivot) {
				if( nLow < pivot-1  )
					QuickSort(array, nLow, pivot-1);
	   
				if( pivot +1 < nHigh)
					QuickSort(array, pivot+1, nHigh);
	 
				break;
			}
			else {
				nItemLow = array[lo];
				nItemHigh = array[hi];
				array[lo] = nItemHigh;
				array[hi] = nItemLow;
			 
				if(lo != pivot && hi != pivot) {
					lo++;
					hi--;
				}
				else if (lo == pivot) {
					pivot = hi;
					lo++;
				}
				else { // hi == pivot
					pivot = lo;
					hi--;
				}
			}
		}
	 
		return true;
	}
}