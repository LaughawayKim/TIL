package lab.java.core;

public class BaseballTest {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		while(true) {
			if(BaseBall.isStrike()) {
				BaseBall.strike++;
			}
			else {
				BaseBall.ball++;
			}
			
			if(BaseBall.ball == 4) {
				System.out.println("1루 출루");
				BaseBall.strike = 0;
				BaseBall.ball = 0;
				BaseBall.player++; 
			}
			else if(BaseBall.strike == 3) {
				BaseBall.outCount++;
				if(BaseBall.outCount < 3) {
					System.out.println("선수 교체");
					BaseBall.strike = 0;
					BaseBall.ball = 0;
					BaseBall.player++; 
				}
				else {
					System.out.println("쓰리아웃! 공슈교체!!");
					break;
				}
			}
			
			BaseBall.getStatus();
		}
	}

}
