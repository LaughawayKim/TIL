package excerics.class2;

public class StudentTest {
	
	private static final int N = 4;

	public static void main(String[] args) {
		Student[] students = new Student[N];
		
		for(int i = 0; i < N; i++) {
			students[i] = new Student(
					"student"+(i+1),
					(int)(Math.random()*100) + 1,
					(int)(Math.random()*100) + 1,
					(int)(Math.random()*100) + 1
			);
		}
		
		
		for(int i = 0; i <N; i++) {
			System.out.printf("======= %s 학생 점수 =======\n", students[i].getStudentId());
//			System.out.printf("C: %d점, Linux: %d점, Java: %d점\n",
//					students[i].getC(),
//					students[i].getLinux(),
//					students[i].getJava()
//			);
			System.out.println(students[i].toString());
			System.out.printf("총점 : %d\n", students[i].getTotal());
			System.out.printf("평균 : %d\n", students[i].getTotal()/3);
		}
		

	}

}
