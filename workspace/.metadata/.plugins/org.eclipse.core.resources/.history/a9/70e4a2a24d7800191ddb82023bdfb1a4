	public int[] getnerateLottoNumbers() {
		int numbers[] = new int[CNT];
	
		for(int i = 0, boolean bSame; i < numbers.length; i++) {
			while(true) {
				bSame = false;
				num = ((int)(Math.random()*45) + 1);
			
				for(int j = 0; j < i; j++ ) {
					if(num == lotto[j]) {
						bSame = true;
						break;
					}
				}
				
				if(bSame == false) {
					lotto[i] = num;
					break;
				}
			}
		}
		
		return numbers;
	}
	
